#include <iostream>
#include <bits/stdc++.h>
using namespace std;
class GuessGame 
{
private:
    int a, b;
public:
    bool Guess(int guessnumber, int usernumber)
    {
        a = guessnumber;
        b = usernumber;
        if (a < b)
        {
            cout << "Number is lower than the guessed number";
            return false;
        }
        else if (a > b)
        {
            cout <<"Number is higher than the guessed number";
            return false;
        }
        else
        {
            cout<<"Congratulations!You have guessed it right";
            return true; 
        }
    }
};

int main()
{
    GuessGame g;
    int attempts;
    cout << "Enter number of attempts: ";
    cin >> attempts;
    int Guessnum;
    cout << "Enter number that is to be guessed: ";
    cin >> Guessnum;
    for (int i = 0; i < attempts; i++)
    {
        int usernum;
        cout << "Enter your guess (between 1 to 100): ";
        cin >> usernum;
        if (g.Guess(Guessnum, usernum))
        {
            break;
        }
        if (i == attempts - 1)
        {
            cout << "Out of attempts! Better luck next time.";
        }
    }
    return 0;
}
